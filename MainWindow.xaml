<Window x:Class="Tasks_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tasks_System"
        mc:Ignorable="d"
        Background="Cornsilk"
        Title="Ventana Principal" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="Registros">
                    <MenuItem x:Name="rTareaMenuItem" Header="Registro de Tareas" Click="rTareaMenuItem_Click"/>
                </MenuItem>
                <MenuItem Header="Consultas">
                    <MenuItem x:Name="cTareasMenuItem" Header="Consulta de Tareas" Click="cTareasMenuItem_Click"/>
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
